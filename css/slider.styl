
$reset-width = 150px
#reset
  background: none
  border: 0
  bottom: 50px
  color: #fff
  cursor: pointer
  font-size: 16px
  font-weight: 700
  left: calc(50% \- ($reset-width / 2))
  left: -webkit-calc(50% \- ($reset-width / 2))
  position: absolute
  text-shadow: 0 1px 0 #0089c8
  width: $reset-width
  z-index: 1

$slider-height = 500px

.stack > .slider
  height: $slider-height
  left: 0
  overflow: hidden
  width: 100%
  max-width: 1000px

  @media screen and (max-width: 1000px)
    padding-bottom: 200px !important

  > #back, > #forward
    appearance: none
    background: none
    background-position: center
    background-repeat: no-repeat
    border: 0
    color: #fff
    height: $slider-height
    opacity: 0.35
    position: absolute
    transition: all 0.2s ease-in-out
    top: 0
    width: 100px
    z-index: 1
    cursor: pointer

    &:hover
      opacity: 0.8

  > #back
    background-image: url("images/arrow-left.png")
    left: 0

  > #forward
    background-image: url("images/arrow-right.png")
    right: 0

  .section-container
    height: $slider-height
    position: relative

  h1
    font-size: 30px
    font-weight: 700

  h3
    font-size: 22px
    font-weight: 700
  p
    font-size: 14px

  div.section
    float: left
    height: $slider-height

    .container
      @extends #site-container
      position: relative
      display: flex
      align-items: center
      justify-content: space-around
      flex-wrap: wrap
      width: 100%
      max-width: 1000px

      @media screen and (max-width: 850px)
        flex-direction: column
        display: block

    .left
      width: 40%

      @media screen and (max-width: 850px)
        display: block
        width: 100%

    .details
      width: 90px
      margin-top: 50%
      margin-left: 50px

      @media screen and (max-width: 850px)
        margin: 0 0 0 100px

    .right
      width: 55%

      .third.header
        margin-top: 120px

        @media screen and (max-width: 850px)
          margin: 0

      @media screen and (max-width: 850px)
        display: block
        width: 100%
        text-align: center
        z-index: 1
        position: relative
        margin: 0

    p
      font-size: 16px
      font-weight: 700
      line-height: 1.5em
      margin-bottom: 40px
      width: 100%
      display: inline-block

    .image-container
      order: 2
      align-self: center

      img
        left: 150px
        position: absolute
        top: 0

        &.genes
          left: 155px
          top: 128px

        &.person
          left: 220px
          top: 33px

        &.worm
          left: 165px

        &.mobile-center
          @media screen and (max-width: 850px)
            left: 80px
            top: 80%

  #classify-button
    order: 1
    margin: 10px 0

  .sponsors-container
    @extends #site-container
    display: flex
    flex-direction: column
    position: absolute
    width: 500px
    left: 45%
    bottom: 22%

    @media screen and (max-width: 1000px)
      position: relative
      max-width: 700px
      width: 100%
      left: initial
      bottom: initial
      align-items: center

  .sponsors
    border-top: 1px solid rgba(#fff, 0.2)
    padding-top: 8px
    order: 2

    @media screen and (max-width: 1000px)
      padding: 10px

    figure
      margin: 0
      padding: 0
      position: relative

      figcaption
        @extends p
        padding: 0 0 0 130px
        max-width: 75%

      img
        left: 0
        position: absolute
        top: 2px

        @media screen and (max-width: 900px)
          position: relative
          left: initial
          top: initial
          float: left


