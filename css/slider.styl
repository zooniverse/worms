
$reset-width = 150px
#reset
  background: none
  border: 0
  bottom: 50px
  color: #fff
  cursor: pointer
  font-size: 16px
  font-weight: 700
  left: calc(50% \- ($reset-width / 2))
  left: -webkit-calc(50% \- ($reset-width / 2))
  position: absolute
  text-shadow: 0 1px 0 #0089c8
  width: $reset-width
  z-index: 1

$slider-height = 500px

.stack > .slider
  height: $slider-height
  left: 0
  overflow: hidden
  width: 100%

  .bsw-promotion
    margin: 0 0 30px 0
    text-align: center

  .progress-bar
    background: rgba(white, 0.3)
    border-radius: 10px
    margin: 0 auto
    max-width: 600px

  .current-progress
    border-radius: 10px
    height: 20px 

  .current-progress-numbers
    margin: 5px 0

  @media screen and (max-width: 1000px)
    padding-bottom: 200px !important

  @media screen and (max-width: 999px)
    height: 100%
    padding: 0 !important

  .caroufredsel_wrapper
    @media screen and (max-width: 999px)
      display: none !important

  > #back, > #forward
    appearance: none
    background: none
    background-position: center
    background-repeat: no-repeat
    border: 0
    color: #fff
    height: $slider-height
    opacity: 0.35
    position: absolute
    transition: all 0.2s ease-in-out
    top: 0
    width: 100px
    z-index: 1
    cursor: pointer

    @media screen and (max-width: 999px)
      display: none !important

    &:hover
      opacity: 0.8

  > #back
    background-image: url("images/arrow-left.png")
    left: 0

  > #forward
    background-image: url("images/arrow-right.png")
    right: 0

  .section-container
    height: $slider-height
    position: relative

  h1
    font-size: 30px
    font-weight: 700

  h3
    font-size: 22px
    font-weight: 700
  p
    font-size: 14px

  div.section
    float: left
    height: $slider-height

    .container
      @extends #site-container
      position: relative
      display: -ms-flexbox
      display: flex
      align-items: center
      justify-content: space-between

    .left
      width: 42%

    .details
      width: 90px
      margin-top: 200px
      margin-left: 50px

    .right
      width: 57%

      p
        width: 85%

      .third.header
        margin-top: 120px

    p
      font-size: 16px
      font-weight: 700
      line-height: 1.5em
      margin-bottom: 40px
      width: 100%
      display: inline-block

    .image-container
      order: 2

      img
        left: 150px
        position: absolute
        top: 0

        &.genes
          left: 155px
          top: 128px

        &.person
          left: 220px
          top: 33px

        &.worm
          left: 165px

  .static-container
    width: 100%
    max-width: 800px
    padding: 0 20px
    box-sizing: border-box
    display: none
    margin: 0 auto

    @media screen and (max-width: 999px)
      display: flex

    @media screen and (max-width: 768px)
      flex-direction: column
      align-items: center

    .image-container
      display: inline-block

      @media screen and (max-width: 768px)
        display: block // Mobile Safari fix

    .static-copy
      display: inline-block
      width: 100%
      max-width: 480px
      padding: 0 20px 0 0

      @media screen and (max-width: 768px)
        max-width: 100%
        text-align: center

  .sponsors-container
    @extends #site-container
    position: relative

    @media screen and (max-width: 1000px)
      display: flex
      flex-direction: column
      position: relative
      max-width: 700px
      width: 100%
      left: initial
      bottom: initial
      align-items: center

  #classify-button
    bottom: 180px
    left: 42%
    position: absolute

    @media screen and (max-width: 1000px)
      order: 1
      margin: 10px 0
      position: relative
      left: initial
      bottom: initial

  .sponsors
    border-top: 1px solid rgba(#fff, 0.2)
    padding-top: 8px
    bottom: 79px
    left: 42%
    position: absolute

    @media screen and (max-width: 1000px)
      position: relative
      left: initial
      bottom: initial
      padding: 10px
      order: 2

    figure
      margin: 0
      padding: 0
      position: relative

      figcaption
        @extends p
        padding: 0 0 0 130px
        max-width: 75%

      img
        left: 0
        position: absolute
        top: 2px

        @media screen and (max-width: 900px)
          position: relative
          left: initial
          top: initial
          float: left



