::selection
  background: #0089c8
  color: #fff
  text-shadow: 0 1px 0 darken(#0089c8, 30%)

html
  height: 100%

body
  min-height: 100%

html, body
  margin: 0px
  padding: 0px

img
  border: 0

body
  background: #01bbff url(images/bg-site.png) repeat
  color: #fff
  font-family: $body-sans-serif
  position: relative

  > .background
    background: url(images/background.png) center
    height: 720px
    left: calc(50% \- ($site-width / 2))
    left: -webkit-calc(50% \- ($site-width / 2))
    margin: 0 auto
    position: absolute
    top: 0
    width: $site-width
    z-index: -1

  > .footer
    background: #16c0ff url(images/bg-footer.png) repeat
    border-top: 1px solid #00b5f8
    box-sizing: border-box
    color: #0175a0
    width: 100%

    > .zooniverse-footer
      @extends #site-container
      box-sizing: border-box
      margin: 0 auto;
      padding: 50px 10px
      max-width: 1000px
      width: 100%

      .zooniverse-logo-container
        margin: 0
        width: 100%
        &:hover
          transition: transform 0.8s
          transform: rotate(720deg)

        .zooniverse-logo
          max-height: 100px
          width: 100%

      .zooniverse-footer-content
        width: 100%

        .zooniverse-footer-heading
          margin: 30px auto
          text-align: center

      .title
        font-family: $footer-sans-serif
        font-size: 19px
        font-weight: 300
        line-height: 1.5em

      .category
        font-size: 12px
        line-height: 20px

        .category-title
          font-size: 11px
          font-weight: 700

.stack
  position: relative

  > div
    @extends #site-container
    display: none
    position: relative

  > div.active
    @extends #clearfix
    display: block
    padding: 50px 0 70px 0

    @media screen and (max-width: 900px)
      padding: 50px 0 85px 0

    @media screen and (max-width: 540px)
      padding: 50px 0 120px 0

#app
  border-top: 5px solid #000
  padding-top: 80px
  position: relative
  z-index: 1

#app > .header
  @extends #site-container
  color: white
  font-size: 12px
  font-weight: 700
  text-shadow: 0 1px 1px rgba(#000, 0.5)
  max-width: 1000px
  width: 100%

  .logo
    float: left

  ul
    margin: 0 auto
    text-align: right
    max-width: 1000px

    li
      border-radius: 30px
      box-sizing: border-box
      display: inline-block
      cursor: pointer
      height: 31px
      line-height: 30px
      text-align: center
      vertical-align: top

      &.active
        background-color: #0383AF
        box-shadow: inset 0 1px 2px 0 rgba(#000, 0.13)

      &.feedback a
        color: #ff6

      a
        color: #fff
        display: block
        padding: 0 15px
        text-decoration: none

    &.selected
      background-color: #0384B0

.help-dialog

  h1,h2,h3,h4
    text-shadow: none

  p
    color: #333
    font-weight: 400
    text-shadow: none

  button[name="close-dialog"]
    font-size: 20px
    position: absolute
    right: 9px
    top: 3px

