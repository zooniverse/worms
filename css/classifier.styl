@keyframes tutorial-circle
  0%
    height: 50px
    left: 216px
    top: 186px
    width: 50px
  50%
    height: 75px
    left: 203px
    top: 173px
    width: 75px
  100%
    height: 50px
    left: 216px
    top: 186px
    width: 50px


.stack > .classifier
  width: 100% !important
  max-width: 1000px

  @media screen and (max-width: 1000px)
    text-align: center

  > .left
    width: 100%
    max-width: 575px
    max-height: 447px
    padding: 0px 40px 0 0
    display: inline-block
    vertical-align: top_bar
    position: relative

    @media screen and (max-width: 1000px)
      margin: 0 auto 45px
      padding: 0 20px
      box-sizing: border-box

    @media screen and (max-width: 960px)
      margin: 0 0 25px 0

    @media screen and (max-width: 500px)
      display: block
      margin: 0 0 15px 0

    .actions
      padding: 14px 0 0 0 !important // sigh
      text-align: center

      button
        @extends #small-button
        transition: all 0.3s ease-in-out
        margin: 0 2.5px

        @media screen and (max-width: 768px)
          height: 35px
          padding: 0 18px

        &.disabled
          cursor: not-allowed
          opacity: 0.5

        @media screen and (max-width: 768px)
          float: none

    .video-container
      position: relative
      width: 100%
      max-width: 555px
      max-height: 432px
      border: 8px solid black
      z-index: 0

      @media screen and (max-width: 575px)
        box-sizing: border-box

      .video-js
        padding-top: 75.25%

      .vjs-fullscreen
        padding-top: 0px

      .key-commands
        p
          color: #014e6a
          font-size: 12px
          float: left
          padding: 24px 20px 0 0
          text-shadow: initial
          font-weight: inherit

        .key
          border: solid 2px #014e6a
          border-radius: 6px
          padding: 3px 5px
          margin-right: 5px
          font-size: 10px
          font-weight: bold

        @media screen and (max-width: 768px)
          display: none

      .tutorial-circle
        animation: 1.5s tutorial-circle linear infinite
        border: 2px solid #f00
        border-radius: 50%
        box-shadow: inset 0 0 5px 0 rgba(#000, 0.4), 0 0 5px 0 rgba(#000, 0.4)
        height: 50px
        left: 216px
        position: absolute
        top: 186px
        width: 50px

      > .video-border
        position: absolute
        z-index: 1

      #worm-video
        position: relative

        > .vjs-big-play-button
          display: none

        > .vjs-control-bar
          bottom: 0
          box-sizing: border-box
          color: #fff
          font-size: 14px
          line-height: 2.5em
          padding: 0 18px

          > .vjs-fullscreen-control, >.vjs-mute-control,
          > .vjs-volume-control, > .vjs-play-control
            display: none

          > .vjs-time-controls, > .vjs-time-divider
            line-height: 2.2em

      .overlay
        background: rgba(#000, 0.0)
        cursor: pointer
        display: block
        height: 100%
        position: absolute
        width: 100%
        z-index: 1

      video, object
        max-width: 575px
        max-height: 432px

      .vjs-poster
        height: 100%
        left: 0
        position: absolute
        top: 0
        width: 100%

  .right
    color: #fff
    display: inline-block
    font-size: 13px
    font-weight: 700
    text-shadow: 0 1px 0 #0089c8
    vertical-align: top
    max-width: 360px
    width: 100%
    padding: 0 0 0 20px

    @media screen and (max-width: 960px)
      max-width: 575px
      margin: 0 auto
      padding: 0 20px
      box-sizing: border-box

    > div.section
      border-top: 1px solid #0283AF
      padding: 18px 0

    .prompt
      text-shadow: none
      font-size: 22px
      box-shadow: 1px 1px solid rgba(0,0,0,0.6)

    .subject-info
      padding: 15px 0px 15px 0px
      width: 100%

      img
        box-shadow: 0 1px 0 0 rgba(#60d4ff, 1)
        display: inline-block
        height: 56px
        margin: 0 10px 0 0
        padding: 0
        vertical-align: top
        width: 56px

      .details
        display: inline-block
        vertical-align: top
        width: 285px

        h2, p
          padding: 0px
          margin: 0px

        p
          font-size: 0.9em

    .players
      @extends #clearfix
      padding: 0 !important // sigh
      max-height: 205px

      .player
        box-sizing: border-box
        float: left
        height: 204px
        overflow: hidden
        margin: 0
        padding: 10px
        width: 50%

        &:first-child
          border-right: 1px solid #0283AF
          box-sizing: border-box
          position: relative

          &:before
            background: url(images/bg-site-gradient.png) repeat
            bottom: 0
            content: ""
            height: 30px
            position: absolute
            width: 100%

        .name
          color: #003140
          font-size: 12px
          font-weight: 700
          text-shadow: none

        .sign-in
          cursor: pointer

          &:hover
            text-decoration: underline

        p
          margin: 1px 0

    .times
      @extends #semantic-list

      li
        border-radius: 3px
        margin: 1px 0
        padding: 0 3px
        position: relative

        button
          background: none
          border: 0
          color: #fff
          cursor: pointer
          height: 100%
          padding: 0
          position: absolute
          right: 2px
          top: -2px

        &:hover
          background: rgba(#000, 0.15)

      span
        color: #000
        text-shadow: 0 1px 0 rgba(#fff, 0.5)

    .actions
      padding: 14px 0 0 0 !important // sigh

      @media screen and (max-width: 960px)
        height: 30px
        padding: 14px 0 !important

      @media screen and (max-width: 768px)
        height: 35px
        margin-top: 14px

      @media screen and (max-width: 500px)
        height: 75px
        margin-top: 0

      button
        @extends #small-button
        transition: all 0.3s ease-in-out
        margin: 0 2.5px

        @media screen and (max-width: 768px)
          height: 35px
          padding: 0 18px

        &.disabled
          cursor: not-allowed
          opacity: 0.5

      .favorite
        float: left

      .discuss
        float: left

      .help
        float: left

        @media screen and (max-width: 400px)
          float: none

      .guide
        float: left

        @media screen and (max-width: 400px)
          float: none

      button[name="next"]
        background: #81e007
        padding: 0 13px
        text-shadow: 0 1px 0 rgba(255,255,255,0.75)
        box-shadow: 0 3px 5px 0 rgba(0,0,0,0.15), inset 0 1px 0 0 rgba(255,255,255,0.75)
        float: right

        @media screen and (max-width: 768px)
          height: 35px
          padding: 0 18px

        @media screen and (max-width: 400px)
          float: none
          margin-top: 5px
  .bubble
    background: #ecf3f8
    border-radius: 0px
    box-shadow: 0 3px 6px 0 rgba(#000, 0.15), inset 0 2px 0 0 #fff
    box-sizing: border-box
    color: #003143
    cursor: pointer
    font-size: 22px
    font-weight: 700
    height: 100px
    padding: 17px 24px
    position: relative
    text-shadow: 0 1px 0 #fff
    width: 360px

    @media screen and (max-width: 960px)
      margin: 0 auto

    &:after
      border-color: transparent #ecf3f8
      border-style: solid
      border-width: 15px 15px 15px 0
      content: ""
      display: block
      left: -15px
      position: absolute
      top: 35px
      width: 0
      z-index: 1

      @media screen and (max-width: 960px)
        left: 160px
        top: -30px
        border-left: 15px solid transparent
        border-right: 15px solid transparent
        border-bottom: 15px solid #ecf3f8

    .small-message
      font-size: 14px
      margin-top: 10px
      font-weight: normal

    .middle-pos
      line-height: 70px;

    p
      margin: 0

  .field-guide
    display: none
    padding: 20px 0 0
    margin: 20px 10px 0
    text-align: center
    color: #014e6a
    background-color: #fff
    border-radius: 6px

    figure
      display: inline-block

      figcaption
        font-size: 12px

    p
      max-width: 600px
      width: 100%
      margin: 1em auto
      font-weight: normal
      text-shadow: initial

    .scroll-up
      font-size: 20px
      padding: 30px 0
      cursor: pointer

      img
        background-color: #81e007
        padding: 8px 5px
        border-radius: 20px


